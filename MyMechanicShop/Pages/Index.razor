@page "/"

<style>
    /* Basic page styles */
    .container {
        max-width: 800px;
        margin: 0 auto;
        padding: 20px;
    }

    /* Heading styles */
    h1 {
        text-align: center;
        font-size: 24px;
        margin-bottom: 20px;
    }

    h3 {
        font-size: 20px;
        margin-top: 30px;
        margin-bottom: 10px;
    }

    /* Table styles */
    .table {
        border-collapse: collapse;
        width: 100%;
        margin-bottom: 30px;
    }

        .table th, .table td {
            border: 1px solid #ccc;
            padding: 10px;
            text-align: center;
        }

        /* Table header styles */
        .table th {
            background-color: #f2f2f2;
            font-weight: bold;
        }
</style>

